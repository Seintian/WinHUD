<Window x:Class="WinHUD.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinHUD"
        mc:Ignorable="d"
        Title="MainWindow"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Topmost="True"
        ShowInTaskbar="False"
        Opacity="0">
	<Grid>
		<StackPanel x:Name="Container"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10"
                    TextElement.FontFamily="Consolas"
                    TextElement.FontWeight="Bold"
                    TextElement.FontSize="12">

			<TextBlock Name="CpuText" Text="CPU: 0%" />
			<TextBlock Name="RamText" Text="RAM: 0%" />

			<TextBlock Name="GpuText" Text="GPU: 0%" />

			<TextBlock Name="DiskText" Text="Disk: 0%" />
			<TextBlock Name="NetText" Text="Net: 0 KB/s" />

			<TextBlock Name="DiskListText" Text="0 C: 0%" />

		</StackPanel>
	</Grid>
</Window>
