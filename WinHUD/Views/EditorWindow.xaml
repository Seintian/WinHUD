<Window x:Class="WinHUD.Views.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinHUD Layout Editor" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to the Layout Editor!" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="(Drag and Drop UI will go here)" FontStyle="Italic" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Button Content="Save to Config &amp; Reload Overlay" Padding="10" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
